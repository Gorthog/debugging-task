{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug NestJS",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "nest",
        "start",
        "--debug",
        "--watch"
      ],
      "console": "integratedTerminal",
      "restart": true,
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
